<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name = "dr_name"/>
                        <field name = "address"/>
                        <field name = "age"/>
                        <field name = "gender"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">name</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "dr_id"/>
                <field name = "dr_name"/>
                <field name = "gender"/>
                <field name = "age"/>
            </tree>
        </field>
    </record>
    <record id="doctor_kanban_view" model="ir.ui.view">
            <field name="name">hospital.doctor.kanban</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <kanban class="o_hospital_doctor_kanban">
                    <field name = "dr_name"/>
                    <field name = "age"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                   <li>
                                    ID:   <field name = "dr_id"/>
                                   </li>
                                    </strong>
                                    <li>
                                    Name: <field name="dr_name"/>
                                    </li>
                                    <li>
                                     Gender:   <field name="gender"/>
                                    </li>
                                    <li>
                                     Age:   <field name="age"/>
                                    </li>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">View doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <menuitem id="Menu_create_doctor"
        name="View Doctors"
        parent="menu_operations_doc"
        action="action_hospital_doctor"
        sequence="3"/>
</odoo>