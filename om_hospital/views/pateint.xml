<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pateint_form" model="ir.ui.view">
        <field name="name">hospital.pateint.form</field>
        <field name="model">hospital.pateint</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name = "p_name"/>
                        <field name = "is_child"/>
                        <field name = "gender"/>
                        <field name = "age"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_pateint_tree" model="ir.ui.view">
        <field name="name">hospital.pateint.tree</field>
        <field name="model">hospital.pateint</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "p_id"/>
                <field name = "p_name"/>
                <field name = "is_child"/>
                <field name = "gender"/>
                <field name = "age"/>
            </tree>
        </field>
    </record>
    <record id="pateint_kanban_view" model="ir.ui.view">
            <field name="name">hospital.pateint.kanban</field>
            <field name="model">hospital.pateint</field>
            <field name="arch" type="xml">
                <kanban class="o_hospital_pateint_kanban">
                    <field name = "p_id"/>
                    <field name = "p_name"/>
                    <field name = "is_child"/>
                    <field name = "gender"/>
                    <field name = "age"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                   <li>
                                    ID:   <field name = "p_id"/>
                                   </li>
                                    </strong>
                                    <li>
                                    Name: <field name="p_name"/>
                                    </li>
                                    <li>
                                     Gender:   <field name="gender"/>
                                    </li>
                                    <li>
                                     Age:   <field name="age"/>
                                    </li>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    <record id="action_hospital_pateint" model="ir.actions.act_window">
        <field name="name">View info</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.pateint</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <menuitem id="Menu_create_user"
        name="View Pateints"
        parent="menu_operations"
        action="action_hospital_pateint"
        sequence="2"/>
</odoo>