<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_type_maintenance" model="ir.ui.view">
            <field name="name">type.maintenance.inherit</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='description']" position="before">
                    <group>
                        <field name="types_id" options="{'no_create': True}" attrs="{'readonly': [('stage_id', '>', '1')]}"/>

                        <field name="details" readonly="1" />
                        <field name="write_html" readonly="1"/>
                        <field name="document_file" readonly="1"/>
                        <field name="customer_id" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
